@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["success"] != null && TempData["success"] != string.Empty)
{
    <partial name="_Notification" />       @* leave this line here *@
}


<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6  text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                        </div>
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                           onclick="return confirm('Are you sure you want to delete this item?')"
                           class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>



