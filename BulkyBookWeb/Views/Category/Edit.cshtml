@model Category

<form method="post" asp-action ="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
       @* or you could say  ModelOnly   or  None*@
        @*<partial name="_Notification" />*@ @*  you don't really need this line because errors are already handled in the summary*@

        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            @*Name:*@
            @*<input type="text" name="categoryName" />*@
        </div>
        <div class="mb-3">
            <label asp-for="@Model.DisplayOrder"></label>
            <input asp-for="@Model.DisplayOrder" class="form-control" />
            <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back  to List
        </a>
    </div>
</form>

@section Scripts{
    @{
       <partial name="_ValidationScriptsPartial"></partial>   
    }   
}