@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Category</h2>
            <hr />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        @*  <partial name="_Notification" />*@         @*    you don't really need this line because errors are already handled in the summary*@
       @* or you could say  ModelOnly   or  None*@

        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" />   @*  Bind this "Name" input field, to the Category Model "Name" property
                                                              When this form is "Posted", it will POST an OBJECT of the Category CLASS
                                                              with the "Name" Property Populated  *@
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            @*Name:*@
            @*<input type="text" name="categoryName" />*@
        </div>
        <div class="mb-3">
            <label asp-for="@Model.DisplayOrder"></label>
            <input asp-for="@Model.DisplayOrder" class="form-control" />
            <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back  to List
        </a>
    </div>
</form>

@section Scripts{
    @{
       <partial name="_ValidationScriptsPartial"></partial>   
    }   
}